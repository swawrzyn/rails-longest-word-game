<div class="container">
  <div class="row">
      <div class="col-sm-1"></div>
    <% @letters.each do |letter| %>
      <div class="col-xs-1">
        <div class="letter-card"><%= letter %></div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <p>What's the longest word you can find?</p>
      <form action="/score" method="post">
         <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
         <%= hidden_field_tag :letters, @letters %>
         <%= hidden_field_tag :start_time, @start_time %>
        <div class="form-group">
          <div class="input-group">
          <input type="text" class="form-control" name="word" placeholder="">
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit">Play</button>
          </span>
      </div>
      </div>
    </form>
    </div>
  </div>
</div>

